page {
  background-color: #f8f8f8;
}

.all_container {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list {
  height: calc(100vh - 80rpx);
}

.NoOrders {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  margin-top: 250rpx;
}

.NoOrders image {
  width: 350rpx;
  height: auto;
  margin-left: 80rpx;
}

.NoOrders text {
  font-size: 40rpx;
  color: #8a8a8a;
}

.item {
  border: 1rpx solid white;
  background-color: white;
  margin-bottom: 20rpx;
}

.list_item {
  height: 200rpx;
}

.top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 25rpx;
  height: 90rpx;
  margin-left: 10rpx;
}

.top image{
  width: 50rpx;
  height: auto;
}

.text1 {
  width: 20%;
  text-indent: 10rpx;
  color: black;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
}

.text2 {
  width: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  color: gray;
  font-size: 30rpx;
  margin-left: 385rpx;
}

.bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 75%;
}

.product_image {
  width: 30%;
  height: 150rpx;
  position: absolute;
  left: 20rpx;
  border-radius: 10rpx;
}

.detail {
  position: relative;
  top: 50rpx;
  height: 100rpx;
}

.product_name {
  width: 50%;
  line-height: 38rpx;
  font-size: 30rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-left: 270rpx;
  margin-top: -65rpx;
  font-weight: 300;
}

.standard {
  width: 50%;
  font-size: 20rpx;
  color: #ccc;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 0 0 0 270rpx;
  line-height: 35rpx;
  margin-top: 5rpx;
}

.money_Return {
  width: 150rpx;
  color: #d56f27;
  font-size: 20rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin: 5rpx 0 0 265rpx;
  line-height: 35rpx;
  background-color: #fff0eb;
  border-radius: 10rpx;
}

.money_Return text{
  margin-left: 10rpx;
}

.product_price {
  width: 25%;
  margin-top: -30rpx;
  display: flex;
  flex-direction: column;
  color: #db7012;
}

.product_price {
  width: 20%;
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 580rpx;
}

.price {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 30rpx;
}

.buyNumber {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 20rpx;
  color: #ccc;
}

.second_bottom {
  border: 1rpx solid white;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 20rpx;
}

.total {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-top: -20rpx;
}

.priceText {
  font-size: 25rpx;
  margin-right: 25rpx;
}

.priceText1 {
  margin-left: 15rpx;
  color: #db7012;
  font-size: 32rpx;
  font-weight: bold;
}

.buttonFlex {
  height: 70rpx;
  width: 450rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.button_type {
  border: 1rpx solid #ccc;
  background-color: #7ca7d1;
  border-radius: 50rpx;
  width: 150rpx;
  margin: 0 10rpx 0 10rpx;
  position: relative;
  top: 10rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button_type text {
  font-size: 27rpx;
  color: white;
}